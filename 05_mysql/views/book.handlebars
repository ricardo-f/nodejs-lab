<div id="book-page">
  <a href="/books">Back to books</a>
  <div class="container">
    <h1>{{book.title}}</h1>
    <p>This book has {{book.pageqty}} pages.</p>
    <div class="action">
      <a href="/books/edit/{{book.id}}">Edit this book</a>
      <form action="/books/remove/{{book.id}}" method="POST">
        <input type="submit" value="Remover">
      </form>
    </div>
  </div>
</div>
