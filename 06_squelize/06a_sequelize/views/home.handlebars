<h1>Users registered in database</h1>
<div class="container">
  {{#each users}}
  <div class="item">
    <h2>{{this.name}}</h2>
    <p>{{this.occupation}}</p>
    <dir class="actions">
      <a href="/users/{{this.id}}" class="details-btn">Details</a>
      <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>
      <form action="/users/delete/{{this.id}}" method="POST">
        <input type="submit" value="Remove User" class="delete-btn">
      </form>
    </dir>
  </div>
  {{/each}}
</div>